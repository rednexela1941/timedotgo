{
  "name": "timedotgo",
  "version": "1.0.0",
  "description": "Golangs excellent \"time\" API ported to typescript.",
  "license": "MIT",
  "author": "rednexela1941",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npx tsc && npx typedoc",
    "build-test": "node ./build_test.js",
    "readme": "npm run build-test && ./README.pl > README.md",
    "tsc": "npx tsc -w",
    "docs": "npm run readme && npx typedoc",
    "test": "npm run build-test && node --enable-source-maps tests/out/run_all.js"
  },
  "devDependencies": {
    "esbuild": "^0.25.5",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3"
  }
}
